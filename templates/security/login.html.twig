{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
<!-- fontawesome cdn -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<body>
    <main class="main-login">
        <div class="container login">
            <div class="row">
                
                <div class="col-lg-8">
                    <img class="img-login" src="{{ asset('pexels-rajesh-tp-1633525.jpg')}}" height="500">
                </div>
                <div class="col-lg-4">
                    <form class="d-flex align-items-center justify-content-center flex-column mt-5" method="post">

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as, {{app.user.userIdentifier}} <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
    
                            <h1 class="h1 text-center font-weight-bolder ">Sing in <i class="fas fa-smile    "></i></h1>
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success border-success border-2 text-center">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        <div class="">
                            <label class="form-label mt-5" for="inputEmail"></label>
                            <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="">
                            <label class="form-label mt-3" for="inputPassword"></label>
                            <input type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
    
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
    
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
                        <button class="btn btn-lg btn-dark mt-5 w-100" type="submit">Sign in</button>
                        <div class="text-center mt-3"><a href="{{ path('app_register') }}">Not have account ?</a></div>
                    </form>
                </div>   
            </div>
        </div>
    </main>
</body>
{% endblock %}
